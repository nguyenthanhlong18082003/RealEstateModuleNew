<odoo>
    <data>
        <record id="contact_res_user_form_view" model="ir.ui.view">
            <field name="name">res.users.form.inherit.zalo</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_simple_form" />
            <field name="arch" type="xml">
                <xpath expr="//sheet/group" position="inside"> 
                    <group>
                        <field name="number_zalo" string="Zalo" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>